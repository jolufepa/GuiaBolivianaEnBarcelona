@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar d-none d-md-block">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://www.facebook.com/groups/1703600096469959/" target="_blank" class="btn btn-link text-decoration-none">
                <span class="bi bi-facebook"></span> Unirse al Grupo
            </a>
        </div>

        <article class="content px-4 pb-5 mb-5">
            @Body
        </article>

        <footer class="mt-5 py-4 text-center text-white" style="background-color: #1a1a1a; border-top: 4px solid #D52B1E;">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <h5 class="fw-bold">Bolivianos en Barcelona</h5>
                        <p class="small text-muted">
                            Conectando a nuestra comunidad en Cataluña.
                            Apoyando el emprendimiento y la integración.
                        </p>
                    </div>

                    <div class="col-md-4 mb-3">
                        <h5 class="fw-bold">Información Legal</h5>
                        <ul class="list-unstyled">
                            <li><a href="aviso-legal" class="btn btn-link btn-sm text-white text-decoration-none p-0">Aviso Legal</a></li>
                            <li><a href="privacidad" class="btn btn-link btn-sm text-white text-decoration-none p-0">Política de Privacidad</a></li>
                        </ul>
                    </div>

                    <div class="col-md-4 mb-3">
                        <h5 class="fw-bold">Comunidad</h5>
                        <a href="https://www.facebook.com/BolivianosinBarcelona" target="_blank" class="btn btn-outline-light btn-sm">
                            <i class="bi bi-facebook"></i> Facebook Oficial
                        </a>
                        <p class="small text-muted mt-2">© @DateTime.Now.Year Todos los derechos reservados.</p>
                    </div>
                </div>
            </div>
        </footer>
    </main>

    <nav class="mobile-nav d-md-none fixed-bottom bg-dark text-white border-top border-danger border-4">
        <div class="d-flex justify-content-around py-2">
            <a href="" class="text-white text-center text-decoration-none px-1">
                <i class="bi bi-house-door-fill fs-4"></i>
                <div style="font-size: 0.65rem;">Inicio</div>
            </a>
            <a href="directorio" class="text-white text-center text-decoration-none px-1">
                <i class="bi bi-search fs-4"></i>
                <div style="font-size: 0.65rem;">Buscar</div>
            </a>
            <a href="eventos" class="text-white text-center text-decoration-none px-1">
                <i class="bi bi-calendar-event fs-4"></i>
                <div style="font-size: 0.65rem;">Eventos</div>
            </a>
            <a href="interes" class="text-white text-center text-decoration-none px-1">
                <i class="bi bi-info-circle fs-4"></i>
                <div style="font-size: 0.65rem;">Info</div>
            </a>
            <a href="acerca-de" class="text-white text-center text-decoration-none px-1">
                <i class="bi bi-people-fill fs-4"></i>
                <div style="font-size: 0.65rem;">Nosotros</div>
            </a>
        </div>
    </nav>
</div>